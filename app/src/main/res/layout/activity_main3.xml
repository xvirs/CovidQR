<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">


    <EditText
        android:id="@+id/etEmailEmpresa"
        android:layout_width="267dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="E-mail de la empresa"
        android:inputType="textEmailAddress"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/btnEnviarTextoFinal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/btnQR"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="QR"
        app:layout_constraintBottom_toBottomOf="@+id/etEmailEmpresa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etEmailEmpresa"
        app:layout_constraintTop_toTopOf="@+id/etEmailEmpresa" />

    <Button
        android:id="@+id/btnEnviarTextoFinal"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="88dp"
        android:background="@color/teal_700"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextoFinal"
        app:layout_constraintVertical_bias="0.764" />

    <TextView
        android:id="@+id/txtTextoFinal"
        android:layout_width="397dp"
        android:layout_height="637dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>